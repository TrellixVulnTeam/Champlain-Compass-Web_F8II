<head>
    <meta charset="utf-8">
	<title>Resources - Edit</title>

	<link rel="stylesheet" type="text/css" href="../../../common/style.css" />
	<script type="text/javascript" src="../../../assets/bootstrap/js/jquery-3.1.1.min.js"></script>
	<script type="text/javascript" src="../../../assets/bootstrap/js/bootstrap.js"></script>
	<script type="text/javascript" src="../../../assets/DataTables/datatables.min.js"></script>
</head>
<body>
	<div id="wrapper">

		<!-- Navbar Start -->
		<div id="nav" class="navbar navbar-inverse navbar-fixed-top">
			<div class="container col-xs-12">
				<div class="navbar-header">
					<img src="../../../images/Champlain_Compass_Logo.png" alt="Champlain Compass Logo" class="logo_img" />
					<a class="navbar-brand navbar-brand-logo" href="/index/{{sessionId}}">Champlain Compass</a>
					
					<button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar-list" aria-expanded="false">
						<span class="sr-only">Toggle Navigation</span>
						<span class="fa fa-bars"></span>
					</button>
				</div>
				
				<div id="navbar-list" class="navbar-collapse collapse" aria-expanded="false">
					<ul class="nav navbar-nav list-group">
						<li>
							<a href="/buildings/{{sessionId}}">Buildings</a>
						</li>
						<li>
							<a href="/events/{{sessionId}}">Events</a>
						</li>
						<li>
							<a href="/faqs/{{sessionId}}">FAQs</a>
						</li>
						<li>
							<a href="/presenters/{{sessionId}}">Presenters</a>
						</li>
						<li class="active">
							<a href="/resources/{{sessionId}}">Resources</a>
						</li>
						<li>
							<a href="/themes/{{sessionId}}">Themes</a>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Files <span class="fa fa-caret-down"></span></a>
							<ul class="dropdown-menu">
								<li><a href="/files/{{sessionId}}">Logos</a></li>
								<li><a href="/files/{{sessionId}}/resources">Resources</a></li>
							</ul>
						</li>
						<li>
							<a href="/logout/{{sessionId}}">Logout</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<!-- Navbar End -->

		<!-- Main Content Start -->
		<div id="content">
			<h1>Edit Resource</h1>

			<form name="edit_resource_form" action="/resources/{{sessionId}}/edit" method="POST">
				<div class="col-sm-12 form-div">
					<label for="name" class="form-label col-sm-3">Resource Name: </label>
					<div class="col-sm-7 {{#if errors.name}} has-error {{/if}}">
						<input name="name" id="name" class="form-control" value="{{resource.Name}}" type="text" />
						{{#if errors.name}}
							<div class="danger well well-sm">
								<p>{{errors.name.msg}}</p>
							</div>
						{{/if}}
					</div>
				</div>

				<div class="col-sm-12 form-div">
					<label for="description" class="form-label col-sm-3">Description: </label>
					<div class="col-sm-7 {{#if errors.description}} has-error {{/if}}">
						<textarea name="description" id="description" class="form-control">{{resource.Description}}</textarea>
						{{#if errors.description}}
							<div class="danger well well-sm">
								<p>{{errors.description.msg}}</p>
							</div>
						{{/if}}
					</div>
				</div>

				<div class="col-sm-12 form-div">
					<div class="form-label col-sm-3">
						<label for="file_name" class="form-label">File Name: </label>
						<button type="button" data-toggle="popover" data-placement="bottom" data-trigger="focus" class="fa fa-info-circle btn btn-link" title="File Name" data-content="The File Name field is use to determine the file to be selected. Please use the extact file name including the extension."></button>
					</div>
					<div class="col-sm-7 {{#if errors.file_name}} has-error {{/if}}">
						<input name="file_name" id="file_name" class="form-control" value="{{resource.File_Name}}" type="text" />
						{{#if errors.file_name}}
							<div class="danger well well-sm">
								<p>{{errors.file_name.msg}}</p>
							</div>
						{{/if}}
					</div>
				</div>

				<div class="col-sm-12 form-div">
					<div class="form-label col-sm-3">
						<label for="file_type" class="form-label">File Type: </label>
						<button type="button" data-toggle="popover" data-placement="bottom" data-trigger="focus" class="fa fa-info-circle btn btn-link" title="File Type" data-content="The File Type field is used to determine what kind of file this is. This should be the extension of the file. EX: pdf"></button>
					</div>
					<div class="col-sm-7 {{#if errors.file_type}} has-error {{/if}}">
						<input name="file_type" id="file_type" class="form-control" value="{{resource.File_Type}}" type="text" />
						{{#if errors.file_type}}
							<div class="danger well well-sm">
								<p>{{errors.file_type.msg}}</p>
							</div>
						{{/if}}
					</div>
				</div>
				
				<div class="col-sm-12 form-div">
					<div class="form-label col-sm-3">
						<label for="is_active" class="form-label">Is Active</label>
						<button type="button" data-toggle="popover" data-placement="bottom" data-trigger="focus" class="fa fa-info-circle btn btn-link" title="Is Active" data-content="The Is Active field is used to detemrine whether or not this item should be visible in the Champlain Compass mobile app. If this field is set to true (the box is checked), it will be visible to user of the mobile app. Otherwise this item will not appear in the mobile app."></button>
					</div>
					<div class="col-sm-7">
						<input name="is_active" id="is_active" class="form-control" type="checkbox" {{#if resource.Is_Active}}checked="checked"{{/if}} />
					</div>
				</div>

				<div class="col-sm-12 form-button-div">
					<input type="hidden" name="resourceId" id="resourceId" class="form-control" value="{{resourceId}}" />
					<button class="btn btn-primary" type="submit">Save</button>
					<a class="btn btn-default" href="/resources/{{sessionId}}">Cancel</a>
				</div>
			</form>

		</div>
		<!-- Main Content End -->

		<script type="text/javascript">
			$(function() {
			  $('[data-toggle="popover"]').popover()
			});
		</script>

	</div>
</body>
</html>